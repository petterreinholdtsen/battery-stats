set -e

if [ $# -eq 0 ]
then
    files=`ls -1 /var/log/battery-stats /var/log/battery-stats.* 2>/dev/null` \
      || true
else
    files="$@"
fi

for file in $files
do
    case "$file" in
	*.gz)
	    zcat $file
	    ;;
	*)
	    cat $file
    esac
done

